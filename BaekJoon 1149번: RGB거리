#include <stdio.h>
#include <iostream>
#include <sstream>
#include<math.h>
#include<algorithm>
#include<vector>
#include<cstring>
#include <string>
#include<map>
#include<stack>
#include<queue>
#pragma warning(disable:4996)
using namespace std;



int main()
{
	cin.tie(0);
	cin.sync_with_stdio(0);
	int N;
	cin >> N;
	int cost[3];
	int house[1001][3];
	house[0][0] = 0;
	house[0][1] = 0;
	house[0][2] = 0;
	for (int i = 1; i <= N; i++)
	{
		cin >> cost[0] >> cost[1] >> cost[2];
		house[i][0] = min(house[i - 1][1], house[i - 1][2]) + cost[0];
		house[i][1] = min(house[i - 1][0], house[i - 1][2]) + cost[1];
		house[i][2] = min(house[i - 1][0], house[i - 1][1]) + cost[2];
	}
	cout << min(house[N][2], min( house[N][1], house[N][0]));

}


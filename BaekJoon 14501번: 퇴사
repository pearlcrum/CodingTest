#include <iostream>
#include <algorithm>
using namespace std;

int n;
int arr[16];
int time[16];
int price[16];
int main()
{
	ios::sync_with_stdio(false);
	cin.tie(0);
	cin >> n;
	for (int i = 1; i <= n; i++)
	{
		cin >> time[i] >> price[i];
	}
	for (int i = n; i >= 1; i--)
	{
		if (i + time[i] -1 > n)
		{
			arr[i] = arr[i + 1];
			continue;
		}
		arr[i] = max(arr[i + time[i]] + price[i], arr[i+1]);
	}
	cout << arr[1];
}
####################################
#include <iostream>
using namespace std;
 
int N;
int T[16];
int P[16];
int dp[16];
 
int main(int argc, const char * argv[]) {
    cin >> N;
 
    for(int i = 1; i <= N; i++){
        cin >> T[i] >> P[i];
    }
    
    for(int i = N; i >= 1; i--){
        if(i + T[i] - 1 > N){
            dp[i] = dp[i + 1];
            continue;
        }
        
        dp[i] = max(dp[i + T[i]] + P[i], dp[i+1]);
    }
    
    cout << dp[1] <<'\n';
    
    return 0;
}

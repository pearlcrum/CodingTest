#include <iostream>
#include <stdio.h>
#include<math.h>
#include<algorithm>
#include<vector>
#include <string>
#pragma warning(disable:4996)
using namespace std;


int main()
{
	int t;
	unsigned long long x, y;
	vector<int> a;
	scanf("%d", &t);

	for (int i = 0; i < t; i++)
	{
		scanf("%d %d", &x, &y);
		unsigned long long int res;
		res = y - x;
		int ans;
		for (int n = 1; ; n++)
		{
			if (res > pow(n, 2) && res <= (pow(n, 2) + n))
			{
				ans = 2 * n ;
				break;
			}
			else if( res > (pow(n,2)+n) && res<= pow(n+1,2))
			{
				ans = 2*n+1;
				break;
			}
			else if(res==1)
			{
				ans = 1;
				break;
			}
		}
		a.push_back(ans);
	}
	for (int i = 0; i < a.size(); i++)
	{
		printf("%d",a[i]);
		if ((a.size() - 1) == i)
		{
			;
		}
		else
		{
			printf("\n");
		}

	}
}

